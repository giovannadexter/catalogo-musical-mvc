<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionar Artista</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Adicionar Artista</h1>
    <form action="/artists/add" method="POST">
        <input type="text" name="name" placeholder="Nome do Artista" required>
        <input type="text" name="genre" placeholder="GÃªnero Musical" required>
        <select name="album_id">
            <option value="">Associar a um disco existente (opcional)</option>
            <% albums.forEach(album => { %>
                <option value="<%= album.id %>"><%= album.title %></option>
            <% }) %>
        </select>
        <button type="submit">Adicionar Artista</button>
    </form>
</body>
</html>
